{
  "manifest_version": 3,
  "name": "Flow - YouTube transcriber & summarizer",
  "description": "Make learning from YouTube faster & easier.",
  "version": "0.1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["script.js"],
      "css": ["style.css"]
    }
  ],
  "icons": { "16": "icon16.png", "48": "icon48.png", "128": "icon128.png" }
}
